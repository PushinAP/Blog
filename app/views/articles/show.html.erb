<article class="post">
  <section class="post-head">
	<h2><%= @article.title %></h2>
  </section>

  <section class="post-summary">
	<%= @article.text %>
  </section>
</article>

<h2>Comments</h2>
<%= render @article.comments %>

<h2>Add comment</h2>
<%= render 'comments/form' %>

<%= link_to 'Edit', edit_article_path(@article) %>
<%= link_to 'Back', articles_path %>